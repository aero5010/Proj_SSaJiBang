<p id="notice"><%= notice %></p>

<h1>Listing Reading Records</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reading_records.each do |reading_record| %>
      <tr>
        <td><%= reading_record.title %></td>
        <td><%= reading_record.start_time %></td>
        <td><%= reading_record.end_time %></td>
        <td><%= reading_record.content %></td>
        <td><%= reading_record.user_id %></td>
        <td><%= link_to 'Show', reading_record %></td>
        <td><%= link_to 'Edit', edit_reading_record_path(reading_record) %></td>
        <td><%= link_to 'Destroy', reading_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

