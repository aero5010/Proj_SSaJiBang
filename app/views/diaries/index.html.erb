<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <h1>Listing Diaries</h1>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Content</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @diaries.each do |diary| %>
        <tr>
          <td><%= diary.title %></td>
          <td><%= diary.date %></td>
          <td><%= diary.content %></td>
          <td><%= diary.user_id %></td>
          <td><%= link_to 'Show', diary %></td>
          <td><%= link_to 'Edit', edit_diary_path(diary) %></td>
          <td><%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Diary', new_diary_path %>

<% else %>
  <h3>please sign_in first.</h3>



<% end %>